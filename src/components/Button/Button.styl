@import "~@/styles/constants.styl"

.button
  display inline-flex
  flex-direction row
  align-items center

  color white
  font-family $font-base
  font-size 16px
  font-weight 700

  background-color $color-blue6

  cursor pointer

  height 2em

  padding 0

  border none
  border-radius 999px
  overflow hidden

  .image
    img
      display block

      height 2em

      border-radius 999px

  .content
    padding 0 $space-normal 0 $space-small

  &:hover
    background-color $color-blue5
